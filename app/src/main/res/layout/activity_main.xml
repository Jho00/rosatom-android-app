<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EEF1FB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555C93"
                android:layout_centerHorizontal="true"
                android:textSize="22dp"
                android:text="Добавление новой задачи"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="Начальник цеха" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rectangle_5"
            android:layout_width="324dp"
            android:layout_height="112dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="170dp"
            android:padding="10dp"
            android:background="@drawable/rectangle_5">
            <EditText
                android:inputType="textMultiLine"
                 android:lines="8"
                android:id="@+id/recognize_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:hint="Введите текст задачи"
                android:autofillHints="Текст задачи" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555C93"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="320dp"
            android:textSize="16dp"
            android:text="Или надиктуйте"/>

        <RelativeLayout
            android:id="@+id/record_button"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="390dp"
            android:background="@drawable/elipse_2"
            android:elevation="20dp"
            >
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/audio"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_vector"
                />
        </RelativeLayout>

        <Button
            android:visibility="invisible"
            android:id="@+id/listen_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="510dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rectangle_7"
            android:text="@string/create_tak" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>